                                        <?php break; ?>

                                    <?php
                                    case 'date': ?>
                                        <input type="date" class="form-control" name="product[<?php echo $attribute->getAttributeCode() ?>]" value="<?php echo $this->getValue($attribute); ?>" <?php if ($attribute->getIsRequired()) : ?> required <?php endif; ?>>
