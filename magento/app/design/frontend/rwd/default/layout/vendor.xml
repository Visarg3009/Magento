<?xml version="1.0"?>
<layout>
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>Register As Vendor</label>
                <url helper="vendor/getRegisterUrl"/>
                <title>Register As Vendor</title>
                <prepare/>
                <urlParams/>
                <position>200</position>
            </action>
            <action method="addLink" translate="label title" module="vendor">
                <label>Login As Vendor</label>
                <url helper="vendor/getLoginUrl"/>
                <title>Login As Vendor</title>
                <prepare/>
                <urlParams/>
                <position>200</position>
            </action>
        </reference>
    </default>

    <vendor_account_create translate="label">
        <label>Vendor Account Registration Form</label>
        <!-- Mage_Vendor -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="vendor/form_register" name="vendor_form_register" template="vendor/form/register.phtml">
                <block type="page/html_wrapper" name="vendor.form.register.fields.before" as="form_fields_before" translate="label">
                    <label>Form Fields Before</label>
                </block>
            </block>
        </reference>
    </vendor_account_create>

    <vendor_account_login translate="label">
        <label>Vendor Account Login Form</label>
        <!-- Mage_Vendor -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="vendor/form_login" name="vendor_form_login" template="vendor/form/login.phtml" />
        </reference>
    </vendor_account_login>

    <vendor_logged_in>
        <reference name="top.links">
            <action method="removeLinkByUrl">
                <url helper="vendor/getRegisterUrl" />
            </action>
            <action method="removeLinkByUrl">
                <url helper="vendor/getLoginUrl" />
            </action>
            <action method="removeLinkByUrl">
                <url helper="customer/getLoginUrl" />
            </action>
            <action method="removeLinkByUrl">
                <url helper="customer/getRegisterUrl" />
            </action>
            <action method="addLink" translate="label title" module="vendor">
                <label>Log Out</label>
                <url helper="vendor/getLogoutUrl"/>
                <title>Log Out</title>
                <prepare/>
                <urlParams/>
                <position>100</position>
            </action>
        </reference>
    </vendor_logged_in>

    <vendor_account_logoutsuccess translate="label">
        <label>Vendor Account Logout Success</label>
        <!-- Mage_Vendor -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="core/template" name="vendor_logout" template="vendor/logout.phtml"/>
        </reference>
    </vendor_account_logoutsuccess>

    <vendor_account_edit translate="label">
        <label>Vendor Account Edit Form</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor">
                <title>Edit Account Info</title>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/form_edit" name="vendor_edit" template="vendor/form/edit.phtml"/>
        </reference>

        <reference name="left">
            <action method="unsetChild">
                <name>left.permanent.callout</name>
            </action>
        </reference>
    </vendor_account_edit>

    <vendor_account translate="label">
        <label>Vendor My Account (All Pages)</label>
        <!--remove name="catalog.compare.sidebar"/>
        <remove name="sale.reorder.sidebar"/-->
        <!-- Mage_Customer -->
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>

        <reference name="content">
            <block type="page/html_wrapper" name="my.account.wrapper" translate="label">
                <label>My Account Wrapper</label>
                <action method="setElementClass">
                    <value>my-account</value>
                </action>
            </block>
        </reference>

        <reference name="left">
            <block type="vendor/account_navigation" name="vendor_account_navigation" before="-" template="vendor/account/navigation.phtml">
                <action method="addLink" translate="label" module="vendor">
                    <name>account</name>
                    <path>vendor/account/</path>
                    <label>Account Dashboard</label>
                </action>
                <action method="addLink" translate="label" module="vendor">
                    <name>account_edit</name>
                    <path>vendor/account/edit/</path>
                    <label>Account Information</label>
                </action>
                <action method="addLink" translate="label" module="vendor">
                    <name>manage_vendor_product_attribute</name>
                    <path>vendor/product_attribute/</path>
                    <label>Manage Product Attribute</label>
                </action>

                <action method="addLink" translate="label" module="vendor">
                    <name>manage_vendor_product_attribute_group</name>
                    <path>vendor/product_group/</path>
                    <label>Manage Product Attribute Group</label>
                </action>

                <action method="addLink" translate="label" module="vendor">
                    <name>manage_vendor_product</name>
                    <path>vendor/product/</path>
                    <label>Manage Product</label>
                </action>

            </block>
        </reference>
    </vendor_account>

    <vendor_account_index translate="label">
        <label>Vendor My Account Dashboard</label>
        <update handle="vendor_account"/>
        <!-- Mage_Customer -->
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/account_dashboard" name="vendor_account_dashboard" template="vendor/account/dashboard.phtml">
                <block type="vendor/account_dashboard_hello" name="vendor_account_dashboard_hello" as="hello" template="vendor/account/dashboard/hello.phtml"/>
                <block type="core/template" name="vendor_account_dashboard_top" as="top" />
                <block type="vendor/account_dashboard_info" name="vendor_account_dashboard_info" as="info" template="vendor/account/dashboard/info.phtml"/>
                <block type="vendor/account_dashboard_newsletter" name="vendor_account_dashboard_newsletter" as="newsletter" template="vendor/account/dashboard/newsletter.phtml"/>
                <block type="vendor/account_dashboard_address" name="vendor_account_dashboard_address" as="address" template="vendor/account/dashboard/address.phtml"/>
            </block>
        </reference>
    </vendor_account_index>


    <vendor_product_attribute_index translate="label">
        <label>Vendor Product Attribute index</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor">
