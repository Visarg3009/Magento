    <vendor_product_index translate="label">
        <label>Vendor Product Grid</label>
        <update handle="vendor_account"/>
        <reference name="my.account.wrapper">
            <block type="vendor/product_grid" name="vendor_product_grid" template="vendor/product/grid.phtml"/>
        </reference>
        <reference name="left">
            <action method="unsetChild">
                <name>left.permanent.callout</name>
