<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Seller>
            <version>1.0.3</version>
        </Ccc_Seller>
    </modules>

    <admin>
        <routers>
            <seller>
                <use>admin</use>
                <args>
                    <module>Ccc_Seller</module>
                    <frontName>seller</frontName>
                </args>
            </seller>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <seller>
                    <file>seller.xml</file>
                </seller>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <routers>
            <seller>
                <use>standard</use>
                <args>
                    <module>Ccc_Seller</module>
                    <frontName>seller</frontName>
                </args>
            </seller>
        </routers>
        <layout>
            <updates>
                <seller>
                    <file>seller.xml</file>
                </seller>
            </updates>
        </layout>
    </frontend>

    <global>
        <models>
            <seller>
                <class>Ccc_Seller_Model</class>
                <resourceModel>ccc_seller_resource</resourceModel>
            </seller>
            <ccc_seller_resource>
                <class>Ccc_Seller_Model_Resource</class>
                <entities>
                    <seller>
                        <table>seller</table>
                    </seller>
                    <seller_datetime>
                        <table>seller_datetime</table>
                    </seller_datetime>
                    <seller_decimal>
                        <table>seller_decimal</table>
                    </seller_decimal>
                    <seller_int>
                        <table>seller_int</table>
                    </seller_int>
                    <seller_char>
                        <table>seller_char</table>
                    </seller_char>
                    <seller_varchar>
                        <table>seller_varchar</table>
                    </seller_varchar>
                    <seller_text>
                        <table>seller_text</table>
                    </seller_text>
                    <eav_attribute>
                        <table>seller_eav_attribute</table>
                    </eav_attribute>
                </entities>
            </ccc_seller_resource>
        </models>

        <resources>
            <seller_setup>
                <setup>
                    <module>Ccc_Seller</module>
                    <class>Ccc_Seller_Model_Resource_Setup</class>
                </setup>
            </seller_setup>
        </resources>

        <helpers>
            <seller>
                <class>Ccc_Seller_Helper</class>
            </seller>
        </helpers>

        <blocks>
            <seller>
                <class>Ccc_Seller_Block</class>
            </seller>
        </blocks>
    </global>
</config>