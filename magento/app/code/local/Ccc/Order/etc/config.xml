<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Order>
            <version>1.0.4</version>
        </Ccc_Order>
    </modules>

    <admin>
        <routers>
            <order>
                <use>admin</use>
                <args>
                    <module>Ccc_Order</module>
                    <frontName>order</frontName>
                </args>
            </order>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <order>
                <title>Order</title>
                <sort_order>370</sort_order>
                <children>
                    <order>
                        <title>Manage Order</title>
                        <sort_order>2</sort_order>
                        <action>order/adminhtml_order</action>
                    </order>
                </children>
            </order>
        </menu>
        <acl>
            <resources>
                <all>Allow Everything</all>
                <admin>
                    <children>
                        <order>
                            <title>Order</title>
                            <children>
                                <order>
                                    <title>Manage Orders</title>
                                </order>
                            </children>
                        </order>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <order>
                    <file>order.xml</file>
                </order>
            </updates>
        </layout>
    </adminhtml>

    <global>
        <models>
            <order>
                <class>Ccc_Order_Model</class>
                <resourceModel>order_resource</resourceModel>
            </order>
            <!-- Resource model to create a database table -->
            <order_resource>
                <class>Ccc_Order_Model_Resource</class>
                <entities>
                    <order>
                        <table>order_order</table>
                    </order>
                    <order_item>
                        <table>order_item</table>
                    </order_item>
                    <order_address>
                        <table>order_address</table>
                    </order_address>
                    <cart>
                        <table>cart</table>
                    </cart>
                    <cart_item>
                        <table>cart_item</table>
                    </cart_item>
                    <cart_address>
                        <table>cart_address</table>
                    </cart_address>
                    <order_comment_history>
                        <table>order_comment_history</table>
                    </order_comment_history>
                </entities>
            </order_resource>
        </models>

        <resources>
            <order_setup>
                <setup>
                    <module>Ccc_Order</module>
                </setup>
            </order_setup>
        </resources>
        <helpers>
            <order>
                <class>Ccc_Order_Helper</class>
            </order>
        </helpers>

        <blocks>
            <order>
                <class>Ccc_Order_Block</class>
            </order>
        </blocks>
    </global>
</config>